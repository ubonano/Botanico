rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    match /companies/{companyId} {
      allow read, create, update, delete: if isAuthenticated();
    }
  }
}
